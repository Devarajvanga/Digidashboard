import java.util.LinkedList;

public class LinkedListExample {
    public static void main(String[] args) {
        // Creating a LinkedList
        LinkedList<String> linkedList = new LinkedList<>();

        // Adding elements to the LinkedList
        linkedList.add("Element 1");
        linkedList.add("Element 2");
        linkedList.add("Element 3");

        // Displaying elements of the LinkedList
        System.out.println("LinkedList elements: " + linkedList);

        // Adding elements at specific positions
        linkedList.add(1, "New Element");
        System.out.println("After adding at index 1: " + linkedList);

        // Removing elements from the LinkedList
        linkedList.remove("Element 2");
        System.out.println("After removing 'Element 2': " + linkedList);

        // Accessing elements by index
        String elementAtIndex = linkedList.get(2);
        System.out.println("Element at index 2: " + elementAtIndex);

        // Checking if the LinkedList contains a specific element
        boolean containsElement = linkedList.contains("New Element");
        System.out.println("Contains 'New Element': " + containsElement);

        // Size of the LinkedList
        int size = linkedList.size();
        System.out.println("Size of the LinkedList: " + size);
    }
}
