public class OperatorExamples {
    public static void main(String[] args) {
        // Arithmetic Operators
        int a = 10, b = 3;
        int sum = a + b;       // 13
        int difference = a - b;// 7
        int product = a * b;    // 30
        int quotient = a / b;   // 3
        int remainder = a % b;  // 1

        System.out.println("Arithmetic Operators:");
        System.out.println("Sum: " + sum);
        System.out.println("Difference: " + difference);
        System.out.println("Product: " + product);
        System.out.println("Quotient: " + quotient);
        System.out.println("Remainder: " + remainder);

        // Assignment Operators
        int x = 5;
        x += 3;  // equivalent to x = x + 3; (x is now 8)

        System.out.println("\nAssignment Operators:");
        System.out.println("x after +=: " + x);

        // Comparison Operators
        int m = 5, n = 10;
        boolean isEqual = (m == n);    // false
        boolean isNotEqual = (m != n); // true

        System.out.println("\nComparison Operators:");
        System.out.println("Is equal: " + isEqual);
        System.out.println("Is not equal: " + isNotEqual);

        // Logical Operators
        boolean condition1 = true, condition2 = false;
        boolean resultAnd = condition1 && condition2; // false
        boolean resultOr = condition1 || condition2;  // true
        boolean resultNot = !condition1;              // false

        System.out.println("\nLogical Operators:");
        System.out.println("AND result: " + resultAnd);
        System.out.println("OR result: " + resultOr);
        System.out.println("NOT result: " + resultNot);

        // Increment and Decrement Operators
        int count = 10;
        count++; // increment by 1 (count is now 11)
        count--; // decrement by 1 (count is now 10 again)

        System.out.println("\nIncrement and Decrement Operators:");
        System.out.println("Count after increment: " + count);

        // Conditional (Ternary) Operator
        int p = 5, q = 10;
        int resultConditional = (p > q) ? p : q; // result is 10

        System.out.println("\nConditional (Ternary) Operator:");
        System.out.println("Result using ternary operator: " + resultConditional);
    }
}
